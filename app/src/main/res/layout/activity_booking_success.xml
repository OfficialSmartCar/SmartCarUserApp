<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/successBackground"
    tools:context="com.moin.smartcar.Booking.BookingSuccess">


    <LinearLayout
        android:id="@+id/successWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:background="#58427A"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Your Appointment Request Has Been Successfully Submitted. \n\n\n Kindly check MyBooking tab for further assistance"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:background="@drawable/strip"
        android:onClick="goBackToHome"
        android:text="HOME"
        android:textColor="@android:color/white" />

</RelativeLayout>

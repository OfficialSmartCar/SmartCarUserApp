<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_Parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <android.support.v4.widget.DrawerLayout
        android:layout_below="@+id/app_bar"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent">

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Select Option"
                        android:textColor="@color/lightGrey"
                        android:textSize="13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:background="@android:color/transparent"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:id="@+id/check1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <com.github.lguipeng.library.animcheckbox.AnimCheckBox
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        app:stroke_width="4dp"
                                        app:stroke_color="#2196F3"
                                        app:circle_color="@android:color/transparent"
                                        android:id="@+id/checkBox1"
                                        android:layout_marginRight="10dp"
                                        android:layout_centerVertical="true"
                                        android:layout_toLeftOf="@+id/carckTextView"
                                        android:layout_toStartOf="@+id/carckTextView"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Crack"
                                        android:textColor="@android:color/white"
                                        android:textSize="15sp"
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true"
                                        android:id="@+id/carckTextView" />

                                </RelativeLayout>



                            </LinearLayout>

                            <LinearLayout
                                android:background="@android:color/transparent"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:id="@+id/check2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <com.github.lguipeng.library.animcheckbox.AnimCheckBox
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        app:stroke_width="4dp"
                                        app:stroke_color="#2196F3"
                                        app:circle_color="@android:color/transparent"
                                        android:id="@+id/checkBox2"
                                        android:layout_marginRight="10dp"
                                        android:layout_centerVertical="true"
                                        android:layout_toLeftOf="@+id/dentTextView"
                                        android:layout_toStartOf="@+id/dentTextView" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Dent"
                                        android:textColor="@android:color/white"
                                        android:textSize="15sp"
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true"
                                        android:id="@+id/dentTextView" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent">

                                <RelativeLayout
                                    android:id="@+id/check3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <com.github.lguipeng.library.animcheckbox.AnimCheckBox
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        app:stroke_width="4dp"
                                        app:stroke_color="#2196F3"
                                        app:circle_color="@android:color/transparent"
                                        android:id="@+id/checkBox3"
                                        android:layout_marginRight="10dp"
                                        android:layout_centerVertical="true"
                                        android:layout_toLeftOf="@+id/scratchTextView"
                                        android:layout_toStartOf="@+id/scratchTextView" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Scratch"
                                        android:textColor="@android:color/white"
                                        android:textSize="15sp"
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true"
                                        android:id="@+id/scratchTextView" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent">

                                <RelativeLayout
                                    android:id="@+id/check4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <com.github.lguipeng.library.animcheckbox.AnimCheckBox
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        app:stroke_width="4dp"
                                        app:stroke_color="#2196F3"
                                        app:circle_color="@android:color/transparent"
                                        android:id="@+id/checkBox4"
                                        android:layout_marginRight="10dp"
                                        android:layout_centerVertical="true"
                                        android:layout_toLeftOf="@+id/paintChipTextView"
                                        android:layout_toStartOf="@+id/paintChipTextView" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Paint Chip"
                                        android:textColor="@android:color/white"
                                        android:textSize="15sp"
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true"
                                        android:id="@+id/paintChipTextView" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/locationOfDamage"
                        android:layout_marginTop="10dp"
                        android:hint="Location Of Damage"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        style="@style/contactUsTextArea"
                        android:gravity="top|left"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/attachImages">

                        <TextView
                            android:gravity="right"
                            android:textSize="20sp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Attach Images "
                            android:layout_weight="1"
                            android:textColor="@color/gradientBackColor"/>

                        <ImageView
                            android:gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:src="@drawable/arrow_right"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/moreInfo"
                        android:hint="Additional Information"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        style="@style/contactUsTextArea"
                        android:gravity="top|left"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:id="@+id/numberOfImages"/>

                    <Button
                        android:onClick="startSendingData"
                        android:textStyle="bold"
                        android:background="@drawable/strip"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="SEND"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                </LinearLayout>

            </ScrollView>


        </RelativeLayout>

        <fragment
            android:id="@+id/navigationDrawer_fragment"
            android:name="com.moin.smartcar.MyBookings.navUserBookings"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layout="@layout/fragment_nav_user_bookings"
            tools:layout="@layout/fragment_nav_user_bookings" />


    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>
